let btn_en, btn_esp;
let idioma = "es";
let secciones = ["introduction", "user-requirements", "changes-to-privacy-policy", "exclusion-of-responsibility", "collection-of-information", "use-of-information", "sharing-of-information-with-third-parties", "disclosure-of-information", "security-of-information", "policy-for-children", "options-regarding-your-information", "cookies", "contact-us"];
 
window.onload = function () {
  btn_en = document.getElementById("btn_en");
  btn_esp = document.getElementById("btn_esp");
  btn_en.addEventListener("click", cambiarIdioma);
  btn_esp.addEventListener("click", cambiarIdioma);
  espanol();
}
function cambiarIdioma(event) {
  btn_en.classList.remove("active");
  btn_esp.classList.remove("active");
  if (idioma == "es") {
    idioma = "en";
    btn_en.classList.add("active");
    ingles();
  }
  else {
    idioma = "es";
    btn_esp.classList.add("active");
    espanol();
  }
}
 
